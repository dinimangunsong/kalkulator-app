<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style untuk tombol angka -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/button_dim</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style untuk tombol operator -->
    <style name="OpButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/accent_secondary</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style untuk tombol Clear (C) -->
    <style name="ClearButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/danger</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>

